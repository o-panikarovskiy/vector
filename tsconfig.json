{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "target": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ESNext", "dom"]
  },
  "include": ["src/**/*.ts", "index.ts"]
}
